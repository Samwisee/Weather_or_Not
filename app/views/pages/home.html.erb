
<%= render layout: 'rainbackground' do %>
  <div class="container-fluid home">
    <div class="row align-items-center" style="height: 100vh">
      <div class="col text-center">
      <% if user_signed_in? %>
      <div style="display: none"> - for i in (0 .. 149)
            i.rain
      </div>

      <% forecast =  @forecast.tomorrow_weather%>
      <% description = @forecast.tomorrow_weather_description %>
      <% image = image_tag @forecast.tomorrow_weather_icon %>
      <% time = @forecast.best_tomorrow_hourly(current_user).datetime.strftime("%I:%M %p") %>
      <% temp = @forecast.best_tomorrow_hourly(current_user).temperature.round %>
      <% feels_like = @forecast.best_tomorrow_hourly(current_user).feels_like_temperature.round %>
      <% city = current_user.city_name.split(",")[0] %>

      <% case forecast
         when "clear"
         when "clouds"
         when "rain"
         when "thunderstorm"
         when "snow"
         end
      %>
      
      <div class="weather-icon sun" ></div>
      <p style="font-size: 70px">Hey <%= current_user.name %></p>
      <div class="home-forecast pt-5">
        <div id="time-forecast" class="m-auto">
          <div>
            <p style="font-size: 140px;"> <%= time %></p>
          </div>
          <div>
            <p style="font-size: 140px"><%= temp %>C</p>
          </div>
        </div>
        <div id="weather-forecast" class="m-auto pt-5">
          <div>
          </div>
          <p>is the best time for you to go out <br/> tomorrow in <%= city %></p>
          <p> <%= description %> </p>
        </div>
      </div>
      <% else %>
      <div class="row" style="height: 100vh">
        <div class="col m-auto">
          <h1>Weather or Not</h1>
          <p>Make the most of your hour outside</p>
          <%= link_to new_user_registration_path, class: "nav-link" do %>
            Get started <span class="fa fa-angle-right"></span>
          <% end  %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 offset-md-1 offset-lg-1 col-lg-5 text-center">
          <p>Welcome to <b>Weather or Not</b> a weather service personalised to you!</p>
          <br/>
          <p style="font-size: calc(10px + 1.2vw)"> There's nothing to download, just sign up for our daily notification, and we will send you the best time to go outside based on your location and availability.</p>
        </div>
        <div class="col-md-10 offset-md-1 col-lg-4 border my-4">
          <div class="value-prop" style="height: 300px">
          </div>
        </div>
      </div>
        
      <% end %>

        
      </div>
    </div>
  </div>
<% end %>


