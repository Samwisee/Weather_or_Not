<% @user = User.last %>
<% city = @user.city_name.split(",")[0] %>
<% time = @forecast.best_tomorrow_hourly(@user).datetime.strftime("%I:%M %p") %>
<% temp = @forecast.best_tomorrow_hourly(@user).temperature.round %>
<% description = @forecast.tomorrow_weather_description %>

