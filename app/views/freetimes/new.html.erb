<div class="container d-flex align-items-center justify-content-center" style="height: 100vh">
  <div class="row">
    <div class="col">
      <h1 style="color: white">Select periods for breaks</h1>
      <%=  simple_form_for Freetime.new,  remote: true do |f| %>
        <%= f.check_box :active %><span> Morning (8:00-11:00)</span>
        <%= f.input :period, as: :hidden, input_html: {value: 'morning'} %>
        <%= f.input :start_at, as: :hidden, input_html: {value: '8:00'} %>
        <%= f.input :end_at, as: :hidden, input_html: {value: '11:00'} %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

