<div class="freetimes container-fluid" style="min-height: 100vh">
  <div class="row d-flex">
    <div class="col freetimes-grid">
      <h2>Select periods for breaks</h2>

      <%=  simple_form_for Freetime.new, remote: true do |f| %>
        <%= f.check_box :active, :id => "period-option-checkbox-morning-ironically", :class => "visibly-hidden", :onclick => "javascript: document.getElementById(`checkbox_submit_morning`).click();" %>
        <div class="period-option">
          <div class="period-option-content">
            <label for="period-option-checkbox-morning-ironically" class="period-option-hitarea"></label>
            <%= f.input :period, input_html: {value: 'morning'} %>
          </div>
          <div class="period-option-toolbar">
            <%= f.input :start_at, input_html: {value: '8:00'} %>
            <%= f.input :end_at, input_html: {value: '11:00'} %>
          </div>
        <%= f.button :submit, id: "checkbox_submit_morning", class: "d-none" %>
        </div>
      <% end %>

      <%=  simple_form_for Freetime.new, remote: true do |f| %>
        <%= f.check_box :active, :id => "period-option-checkbox-noon-ironically", :class => "visibly-hidden", :onclick => "javascript: document.getElementById(`checkbox_submit_noon`).click();" %>
        <div class="period-option">
          <div class="period-option-content">
            <label for="period-option-checkbox-noon-ironically" class="period-option-hitarea"></label>
            <%= f.input :period, input_html: {value: 'noon'} %>
          </div>
          <div class="period-option-toolbar">
            <%= f.input :start_at, input_html: {value: '11:00'} %>
            <%= f.input :end_at, input_html: {value: '14:00'} %>
          </div>
        <%= f.button :submit, id: "checkbox_submit_noon", class: "d-none" %>
        </div>
      <% end %>
      <%=  simple_form_for Freetime.new, method: :post, remote: true do |f| %>
        <%= f.check_box :active, :id => "period-option-checkbox-night-ironically", :class => "visibly-hidden", :onclick => "javascript: document.getElementById(`checkbox_submit_night`).click();" %>
        <div class="period-option">
          <div class="period-option-content">
            <label for="period-option-checkbox-night-ironically" class="period-option-hitarea"></label>
            <%= f.input :period, input_html: {value: 'night'} %>
          </div>
          <div class="period-option-toolbar">
            <%= f.input :start_at, input_html: {value: '14:00'} %>
            <%= f.input :end_at, input_html: {value: '17:00'} %>
          </div>

          <%= f.button :submit, id: "checkbox_submit_night", class: "d-none" %>
        </div>
      <% end %>
      </div>

      <%= link_to "Submit", send_mail_and_redirect_path %> 
    </div>
  </div>
</div>

